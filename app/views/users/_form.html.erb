<%= bootstrap_form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= image_tag(@user.profile_pic_url, :size => "260x180") if @user.profile_pic?%>
  <div class="field">
    <%= f.file_field :profile_pic %>
  </div>
  <div class="field">
    <%= f.select :gender, User.genders.keys.to_a %>
  </div>
  <div class="field">
    <%= f.select :ethnicity, User.ethnicities.keys.to_a %>
  </div>
  <div class="field">
    <%= f.date_field(:dob) %>
  </div>
  <div class="field">
    <%= f.select :blood_group, ["A+", "A-", "B+", "B-", "AB+", "AB-", "O+", "O-"]%>
  </div>

  <div class="field">
    <%#= f.text_field :height, placeholder: "M" %>
  </div>
  <div class="field">
    <%#= f.text_field :weight, placeholder: "KG" %>
  </div>
  <div class="field">
      <%= f.select :marital_status, User.marital_statuses.keys.to_a %>
  </div>
  <div class="field">
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.text_field :postcode %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
