<div id="wrapper">
<div class="container" id="dashboardbody">


      Glucose upload:-
     <%= nested_form_for @user do |f| %>

      <div class="healthrecord">
        <%= f.fields_for :glucoses do |task_form| %>
         <%= task_form.date_field :date_taken%>
          <%= task_form.time_field :time_taken%>
           <%= task_form.text_field :measurement, placeholder: "measurement" %>
           <%= task_form.select :context, Glucose.contexts.keys.to_a %><!-- to fill up enum values -->
          <%= task_form.link_to_remove "Remove this record", class: "btn btn-danger"%>
          <%= task_form.submit "submit", class: "btn btn-warning" %>
        <% end %>
      </div>

      <%= f.link_to_add "Add a New Record", :glucoses, class: "btn btn-info new-record"%>

    <% end %>
      <div class="healthupload">
        <h3> Glucose Record </h3>
            <table class="table">
              <thead>
                <tr>
                  <td> Measurement </td>
                  <td> Index </td>
                  <td> Date</td>
                  <td> Time </td>
                </tr>
              </thead>

              <tbody>
                <%if @user_glucose!= nil  %>
                <%  @user_glucose.all.each do |health_record| %>
                 <tr>

                   <td><%= health_record.measurement%> </td>
                   <td><%= health_record.context %> </td>
                   <td><%= health_record.created_at.strftime('%v')%> </td>
                   <td><%= health_record.created_at.strftime('%H')%></td>

                 </tr>
                 <% end %>
               <% end %>
              </tbody>
            </table>
          </div>





      Pressure upload:-
     <%= nested_form_for @user do |f| %>

      <div class="healthrecord">
        <%= f.fields_for :pressures do |task_form| %>
